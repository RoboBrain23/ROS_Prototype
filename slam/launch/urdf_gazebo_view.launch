<?xml version="1.0" encoding="UTF-8"?>
<launch>
	
	<!-- Launch custom world Gazebo  
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" default="$(find slam)/gazebo_world/cafe_custom.world"/>
		<arg name="paused" value="false"/>
		<arg name="gui" value="true"/>
	</include>	 -->

	<!-- Publish fixed tfs -->	
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
		<remap from="/joint_states" to="/robot/joint_states" />
	</node>

	<!-- Spawn the urdf model -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find slam)/urdf/car.urdf.xacro'" />

		
	<arg name="x" default="0.0" />
	<arg name="y" default="0.0" />
	<arg name="z" default="0.0" />
	
	<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -x $(arg x) -y $(arg y) -z $(arg z) -model car -param robot_description"/>

</launch>
